<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".VideoScreenActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:id="@+id/nested_scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main content container -->
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/video_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/oppositeOfBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/video_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/oppositeOfBackground"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/video_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <LinearLayout
                        android:id="@+id/views_uploadtime_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        app:layout_constraintTop_toBottomOf="@id/video_description"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/video_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/darker_gray" />

                        <TextView
                            android:id="@+id/video_uploadtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/darker_gray"
                            android:paddingStart="8dp" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/author_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/views_uploadtime_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/author_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/author_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/oppositeOfBackground"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/author_image"
                            app:layout_constraintEnd_toStartOf="@+id/subscribe_button"
                            app:layout_constraintHorizontal_bias="0" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/subscribe_button"
                            style="@style/SubscribeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subscribe"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/action_buttons_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/author_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/like_button"
                            style="@style/NonSubscribeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Like" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/dislike_button"
                            style="@style/NonSubscribeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dislike"
                            android:layout_marginStart="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/share_button"
                            style="@style/NonSubscribeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Initially visible button to show comments -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/show_comments_button"
                        style="@style/NonSubscribeButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Comments"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/action_buttons_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/related_videos_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Comments section, initially hidden -->
            <LinearLayout
                android:id="@+id/comments_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorBackground"
                android:visibility="gone">

                <Button
                    android:backgroundTint="@color/colorBackground"
                    android:textColor="@color/oppositeOfBackground"
                    android:id="@+id/close_comments_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X" />

                <TextView
                    android:id="@+id/comments_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments:"
                    android:textSize="16sp"
                    android:textColor="@color/oppositeOfBackground" />

                <!-- New section for adding comments -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/user_image_input"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img1"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/username_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Username"
                        android:background="@color/colorBackground"
                        android:textColor="@color/oppositeOfBackground" />

                    <EditText
                        android:id="@+id/comment_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Add a comment"
                        android:background="@color/colorBackground"
                        android:textColor="@color/oppositeOfBackground" />

                    <Button
                        android:id="@+id/submit_comment_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NonSubscribeButton"
                        android:text="Submit" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comments_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
